# Optional: Custom database path (default: ./pipali.db/)
# POSTGRES_DB=

# Optional: App configuration
# PIPALI_HOST=127.0.0.1
# PIPALI_PORT=6464
# PIPALI_PLATFORM_URL=https://platform.pipali.ai
# PIPALI_ANON_MODE=false
# PIPALI_DEBUG=true
# LOG_LEVEL=info
# PIPALI_TELEMETRY_DISABLE=true

# Optional: Disable sandbox for shell commands
# PIPALI_SANDBOX_DISABLED=true

# Optional: Limit research iterations (default: 100)
# PIPALI_RESEARCH_ITERATIONS=10

# Optional: Custom directories
# PIPALI_DATA_DIR=
# PIPALI_CONFIG_DIR=
# PIPALI_CACHE_DIR=
# PIPALI_LOGS_DIR=
# PIPALI_SKILLS_DIR=

# Optional: Direct model provider API keys
# By default, model access is provided via the Pipali Platform.
# Set these only if you want to use providers directly.
# OPENAI_API_KEY=
# OPENAI_BASE_URL=

# Optional: Search provider API keys (for self-hosted web search)
# SERPER_DEV_API_KEY=
# EXA_API_KEY=
# EXA_API_URL=https://api.exa.ai
