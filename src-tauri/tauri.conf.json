{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pipali",
  "version": "0.1.0",
  "identifier": "ai.pipali",
  "build": {
    "beforeDevCommand": "cd src-tauri-frontend && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd src-tauri-frontend && bun run build",
    "frontendDist": "../src-tauri-frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pipali",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "title": "Pipali",
        "url": "/splash.html",
        "width": 400,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "visible": true,
        "focus": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "id": "main-tray"
    },
    "security": {
      "csp": "default-src 'self' tauri: asset: ipc: http://ipc.localhost; connect-src 'self' http: ws: tauri: asset: ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline' tauri: asset:; script-src 'self' 'unsafe-inline' tauri: asset:; img-src 'self' data: blob: tauri: asset: http: https://*.googleusercontent.com https://www.gravatar.com; font-src 'self' data: tauri: asset:"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/bun",
      "binaries/uv",
      "binaries/uvx"
    ],
    "resources": {
      "resources/server": "resources/server"
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": "Entitlements.plist",
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "pipali"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDBCRkUzMDRBRDJFMjRBM0YKUldRL1N1TFNTakQrQzRBcm9vcVVQWktsTWNQV3YzV052UlFBS1pPek5QZ3VjdGR2UUgzOWgvTzkK",
      "endpoints": [
        "https://download.pipali.ai/releases/latest/update.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
